<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <!-- "BRINGO DEMO" text box at the top center -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="75sp"
        android:background="#7a4b9c"
        android:gravity="center"
        android:text="BRINGO DEMO"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
    />


    <TextView
        android:id="@+id/TextAddress"
        android:layout_width="381dp"
        android:layout_height="390dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="@+id/editTextAddress"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="137dp"
        android:background="@drawable/rounded_edittext_background"
        android:text="  ADRESE CURENTE:"
        android:textAlignment="center"
        android:textColor="#525050"
        android:textColorHint="#525050"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textGoToFirstAdress"
        android:layout_width="383dp"
        android:layout_height="53dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="@+id/editTextAddress"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="67dp"
        android:background="@drawable/rounded_edittext_background2"
        android:text="Doresti sa te reintorci de unde ai plecat?"
        android:textAlignment="center"
        android:textColor="#525050"
        android:textColorHint="#525050"
        android:textSize="15sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="68sp"
        android:layout_alignBottom="@+id/textViewTitle"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-112dp"
        android:background="@drawable/rounded_edittext_background2"
        android:gravity="start|center_vertical"
        android:hint="-INTRODU ADRESA"
        android:inputType="text"
        android:paddingStart="16sp"
        android:paddingEnd="32sp"
        android:shadowColor="#000000"
        android:textColor="#f7f7f7"
        android:textColorHint="#dfdce0" />

    <Button
        android:id="@+id/add_Adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/editTextAddress"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="554dp"
        android:background="@drawable/transparent_round_background"
        android:drawableRight="@drawable/ic_plus"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/don_t_Go_To_First"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignEnd="@+id/TextAddress"
        android:layout_alignRight="@id/textGoToFirstAdress"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="92dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rectangle_transparent"
        android:text="NU"
        android:textSize="10dp"
        android:textColor="#525050"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/Go_To_First"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rectangle_transparent"
        android:text="DA"
        android:textColor="#525050"
        android:textSize="10dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonStartRoute"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_weight="1"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:text="START RUTÄ‚"
        />
</RelativeLayout>
